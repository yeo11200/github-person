#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Pre-push checks starting..."

# ìƒ‰ìƒ ì •ì˜
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# ê²°ê³¼ ì¶”ì  ë³€ìˆ˜
LINT_PASSED=false
TEST_PASSED=false

echo -e "${BLUE}ğŸ” Lint check starting...${NC}"

# Lint ì‹¤í–‰
if npm run lint; then
    echo -e "${GREEN}âœ… Lint check passed!${NC}"
    LINT_PASSED=true
else
    echo -e "${RED}âŒ Lint check failed!${NC}"
    echo -e "${RED}CLI Lint ì‹¤íŒ¨${NC}"
    LINT_PASSED=false
fi

echo ""
echo -e "${BLUE}ğŸ§ª Test check starting...${NC}"

# Test ì‹¤í–‰
if npm test; then
    echo -e "${GREEN}âœ… Test check passed!${NC}"
    TEST_PASSED=true
else
    echo -e "${RED}âŒ Test check failed!${NC}"
    echo -e "${RED}í…ŒìŠ¤íŠ¸ì½”ë“œ ì‹¤íŒ¨${NC}"
    TEST_PASSED=false
fi

echo ""

# ìµœì¢… ê²°ê³¼ í™•ì¸
if [ "$LINT_PASSED" = true ] && [ "$TEST_PASSED" = true ]; then
    echo -e "${GREEN}ğŸ‰ All checks passed! Push will proceed.${NC}"
    exit 0
else
    echo -e "${RED}ğŸš« Push blocked due to failed checks:${NC}"
    
    if [ "$LINT_PASSED" = false ]; then
        echo -e "${RED}  - Lint check failed${NC}"
    fi
    
    if [ "$TEST_PASSED" = false ]; then
        echo -e "${RED}  - Test check failed${NC}"
    fi
    
    echo ""
    echo -e "${YELLOW}ğŸ’¡ Fix the issues above and try pushing again.${NC}"
    exit 1
fi 